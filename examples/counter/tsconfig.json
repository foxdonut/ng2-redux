{
    "version": "1.6.2",
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "listFiles": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noLib": false,
        "outDir": "dist"
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./actions/CounterActions.ts",
        "./components/Counter.ts",
        "./containers/App.ts",
        "./index.ts",
        "./reducers/counter.ts",
        "./reducers/index.ts",
        "./store/configureStore.ts",
        "./typings/_custom/custom.d.ts",
        "./typings/redux/redux.d.ts",
        "./typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
